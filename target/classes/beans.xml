<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Charge les propriétés de application.properties -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:application.properties"/>
    </bean>

    <!-- Bean for ReaderDirectory -->
    <bean id="readerDirectory" class="fr.hetic.readers.ReaderDirectory">
        <constructor-arg value="${data.directory}"/>
        <constructor-arg ref="fileUtils"/>
    </bean>

    <!-- Bean for ReaderDatabase -->
    <bean id="readerDatabase" class="fr.hetic.readers.ReaderDatabase">
        <constructor-arg ref="databaseManager"/>
        <constructor-arg ref="fileStatement"/>
    </bean>

    <!-- Bean for FileUtils -->
    <bean id="fileUtils" class="fr.hetic.FileUtils">
        <constructor-arg value="${data.output_extension}"/>
        <constructor-arg value="${data.input_extension}"/>
        <constructor-arg value="${data.outputs_directory}"/>
    </bean>

    <!-- Bean for DatabaseManager -->
    <bean id="databaseManager" class="fr.hetic.database.DatabaseManager">
        <constructor-arg value="${data.url_local}"/>
        <constructor-arg value="${data.user}"/>
        <constructor-arg value="${data.password}"/>
    </bean>

    <!-- Bean for FileStatement -->
    <bean id="fileStatement" class="fr.hetic.statements.FileStatement">
        <constructor-arg ref="databaseManager"/>
    </bean>

</beans>